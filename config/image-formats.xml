<?xml version="1.0" encoding="UTF-8"?>
<formats xmlns="http://schemas.sulu.io/media/formats"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://schemas.sulu.io/media/formats http://schemas.sulu.io/media/formats-1.1.xsd">

    <!-- Product List Thumbnails -->
    <format key="400x300">
        <meta>
            <title lang="en">Product List Thumbnail</title>
            <title lang="de">Produktlisten-Miniaturansicht</title>
            <title lang="pl">Miniatura listy produktów</title>
        </meta>
        <scale x="400" y="300" mode="outbound"/>
    </format>

    <format key="800x600">
        <meta>
            <title lang="en">Large Product Image</title>
            <title lang="de">Großes Produktbild</title>
            <title lang="pl">Duże zdjęcie produktu</title>
        </meta>
        <scale x="800" y="600" mode="outbound"/>
    </format>

    <format key="400x400">
        <meta>
            <title lang="en">Product Square</title>
            <title lang="de">Produkt Quadrat</title>
            <title lang="pl">Kwadratowy produkt</title>
        </meta>
        <scale x="400" y="400" mode="outbound"/>
    </format>

    <format key="150x150">
        <meta>
            <title lang="en">Thumbnail Small</title>
            <title lang="de">Kleine Miniaturansicht</title>
            <title lang="pl">Mała miniatura</title>
        </meta>
        <scale x="150" y="150" mode="outbound"/>
    </format>

    <format key="200x100">
        <meta>
            <title lang="en">Logo Size</title>
            <title lang="de">Logo-Größe</title>
            <title lang="pl">Rozmiar logo</title>
        </meta>
        <scale x="200" y="100" mode="inset"/>
    </format>

</formats>
