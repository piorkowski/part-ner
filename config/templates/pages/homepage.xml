<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>homepage</key>

    <view>pages/homepage</view>
    <controller>Sulu\Bundle\WebsiteBundle\Controller\DefaultController::indexAction</controller>
    <cacheLifetime>2400</cacheLifetime>

    <meta>
        <title lang="pl">Strona główna</title>
        <title lang="en">Homepage</title>
        <title lang="de">Startseite</title>
    </meta>

    <properties>
        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title lang="pl">Tytuł</title>
                <title lang="en">Title</title>
                <title lang="de">Titel</title>
            </meta>

            <params>
                <param name="headline" value="true"/>
            </params>

            <tag name="sulu.rlp.part"/>
        </property>

        <property name="url" type="resource_locator" mandatory="true">
            <meta>
                <title lang="en">Resourcelocator</title>
                <title lang="de">Adresse</title>
            </meta>

            <tag name="sulu.rlp"/>
        </property>

        <property name="hero_slides" type="block">
            <meta>
                <title lang="pl">Slajdy Hero</title>
                <title lang="en">Hero Slides</title>
                <title lang="de">Hero-Folien</title>
            </meta>

            <types>
                <type name="slide">
                    <meta>
                        <title lang="pl">Slajd</title>
                        <title lang="en">Slide</title>
                        <title lang="de">Folie</title>
                    </meta>

                    <properties>
                        <property name="image" type="single_media_selection" mandatory="true">
                            <meta>
                                <title lang="pl">Zdjęcie tła</title>
                                <title lang="en">Background image</title>
                                <title lang="de">Hintergrundbild</title>
                            </meta>
                            <params>
                                <param name="types" value="image"/>
                            </params>
                        </property>

                        <property name="title_line1" type="text_line">
                            <meta>
                                <title lang="pl">Tytuł - linia 1</title>
                                <title lang="en">Title - line 1</title>
                                <title lang="de">Titel - Zeile 1</title>
                            </meta>
                        </property>

                        <property name="title_line2" type="text_line">
                            <meta>
                                <title lang="pl">Tytuł - linia 2 (większy)</title>
                                <title lang="en">Title - line 2 (bigger)</title>
                                <title lang="de">Titel - Zeile 2 (größer)</title>
                            </meta>
                        </property>

                        <property name="title_line3" type="text_line">
                            <meta>
                                <title lang="pl">Tytuł - linia 3</title>
                                <title lang="en">Title - line 3</title>
                                <title lang="de">Titel - Zeile 3</title>
                            </meta>
                        </property>

                        <property name="cta_text" type="text_line">
                            <meta>
                                <title lang="pl">Tekst przycisku</title>
                                <title lang="en">Button text</title>
                                <title lang="de">Button-Text</title>
                            </meta>
                        </property>

                        <property name="cta_link" type="single_page_selection">
                            <meta>
                                <title lang="pl">Link przycisku</title>
                                <title lang="en">Button link</title>
                                <title lang="de">Button-Link</title>
                            </meta>
                        </property>
                    </properties>
                </type>
            </types>
        </property>

        <property name="categories" type="page_selection">
            <meta>
                <title lang="pl">Kategorie produktów</title>
                <title lang="en">Product categories</title>
                <title lang="de">Produktkategorien</title>
            </meta>
            <params>
                <param name="max" value="8"/>
            </params>
        </property>

        <section name="video_section">
            <meta>
                <title lang="pl">Sekcja Video</title>
                <title lang="en">Video Section</title>
                <title lang="de">Video-Bereich</title>
            </meta>

            <properties>
                <property name="video_enabled" type="checkbox">
                    <meta>
                        <title lang="pl">Włącz sekcję video</title>
                        <title lang="en">Enable video section</title>
                        <title lang="de">Video-Bereich aktivieren</title>
                    </meta>
                </property>

                <property name="video_title" type="text_line">
                    <meta>
                        <title lang="pl">Tytuł</title>
                        <title lang="en">Title</title>
                        <title lang="de">Titel</title>
                    </meta>
                </property>

                <property name="video_youtube_url" type="text_line">
                    <meta>
                        <title lang="pl">URL YouTube</title>
                        <title lang="en">YouTube URL</title>
                        <title lang="de">YouTube-URL</title>
                    </meta>
                </property>

                <property name="video_fallback_image" type="single_media_selection">
                    <meta>
                        <title lang="pl">Zdjęcie zastępcze</title>
                        <title lang="en">Fallback image</title>
                        <title lang="de">Ersatzbild</title>
                    </meta>
                    <params>
                        <param name="types" value="image"/>
                    </params>
                </property>
            </properties>
        </section>

        <property name="featured_products" type="page_selection">
            <meta>
                <title lang="pl">Wyróżnione produkty (carousel)</title>
                <title lang="en">Featured products (carousel)</title>
                <title lang="de">Empfohlene Produkte (Karussell)</title>
            </meta>
            <params>
                <param name="max" value="12"/>
            </params>
        </property>

        <property name="news_posts" type="block">
            <meta>
                <title lang="pl">Aktualności</title>
                <title lang="en">News posts</title>
                <title lang="de">Nachrichten</title>
            </meta>

            <types>
                <type name="news_item">
                    <meta>
                        <title lang="pl">Aktualność</title>
                        <title lang="en">News item</title>
                        <title lang="de">Nachricht</title>
                    </meta>

                    <properties>
                        <property name="title" type="text_line">
                            <meta>
                                <title lang="pl">Tytuł</title>
                                <title lang="en">Title</title>
                                <title lang="de">Titel</title>
                            </meta>
                        </property>

                        <property name="excerpt" type="text_area">
                            <meta>
                                <title lang="pl">Zajawka</title>
                                <title lang="en">Excerpt</title>
                                <title lang="de">Auszug</title>
                            </meta>
                        </property>

                        <property name="link" type="single_page_selection">
                            <meta>
                                <title lang="pl">Link do strony</title>
                                <title lang="en">Page link</title>
                                <title lang="de">Seitenlink</title>
                            </meta>
                        </property>
                    </properties>
                </type>
            </types>
        </property>
    </properties>
</template>
