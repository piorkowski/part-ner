<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>category-list</key>
    <view>pages/category-list</view>
    <controller>Sulu\Bundle\WebsiteBundle\Controller\DefaultController::indexAction</controller>
    <cacheLifetime>2400</cacheLifetime>

    <meta>
        <title lang="pl">Lista kategorii</title>
        <title lang="en">Category listing</title>
        <title lang="de">Kategorieliste</title>
    </meta>

    <properties>
        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title lang="pl">Tytuł</title>
                <title lang="en">Title</title>
                <title lang="de">Titel</title>
            </meta>
            <tag name="sulu.search.field" role="title"/>
            <tag name="sulu.rlp.part"/>
        </property>

        <property name="url" type="resource_locator" mandatory="true">
            <meta>
                <title lang="pl">Adres</title>
                <title lang="en">Resourcelocator</title>
                <title lang="de">Adresse</title>
            </meta>
            <tag name="sulu.rlp"/>
        </property>

        <property name="description" type="text_editor">
            <meta>
                <title lang="pl">Opis</title>
                <title lang="en">Description</title>
                <title lang="de">Beschreibung</title>
            </meta>
            <tag name="sulu.search.field"/>
        </property>

        <property name="category_image" type="single_media_selection">
            <meta>
                <title lang="pl">Zdjęcie w tle nagłówka</title>
                <title lang="en">Header background image</title>
                <title lang="de">Kopfzeilenhintergrundbild</title>
            </meta>
            <params>
                <param name="types" value="image"/>
            </params>
        </property>

        <property name="categories" type="page_selection">
            <meta>
                <title lang="pl">Wybierz podstrony/kategorie do wyświetlenia</title>
                <title lang="en">Select pages/categories to display</title>
                <title lang="de">Seiten/Kategorien auswählen</title>
            </meta>
        </property>
    </properties>
</template>
