{% extends "base.html.twig" %}

{% block content %}
    <div class="page-title-wrap typo-white">
        <div class="page-title-wrap-inner section-bg-dark-1">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <ol class="breadcrumb">
                            <li><a href="{{ sulu_content_root_path() }}">{{ 'navigation.home'|trans }}</a></li>
                            {% if content.parent %}
                                <li><a href="{{ sulu_content_path(content.parent.id) }}">{{ content.parent.title }}</a></li>
                            {% endif %}
                            <li class="active">{{ content.title }}</li>
                        </ol>
                        <h1 class="page-title">{{ content.title }}</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class="section-wrap pt-80 pb-40 product-single">
        <div class="container relative">
            <div class="row">

                {# Galeria zdjęć produktu #}
                <div class="col-md-6 mb-50">
                    {% if content.images|length > 0 %}
                        <div class="product-img-wrap">
                            {# Główne zdjęcie #}
                            <div class="flickity flickity-slider-wrap mfp-hover" id="gallery-main">
                                {% for image in content.images %}
                                    <div class="gallery-cell">
                                        <a href="{{ image.url }}" class="lightbox-img">
                                            <img src="{{ image.thumbnails['400x400'] }}" alt="{{ image.title }}">
                                            <i class="ui-zoom zoom-icon"></i>
                                        </a>
                                    </div>
                                {% endfor %}
                            </div>

                            {# Miniatury #}
                            {% if content.images|length > 1 %}
                                <div class="flickity flickity-thumbs" id="gallery-thumbs">
                                    {% for image in content.images %}
                                        <div class="gallery-cell">
                                            <img src="{{ image.thumbnails['150x150'] }}" alt="{{ image.title }}">
                                        </div>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                    {% endif %}
                </div>

                {# Informacje o produkcie #}
                <div class="col-md-6 product-description-wrap mb-50">
                    {% if content.subtitle %}
                        <p class="text-muted">{{ content.subtitle }}</p>
                    {% endif %}

                    <h1 class="product-title">{{ content.title }}</h1>

                    {% if content.product_code %}
                        <span class="product-code">{{ 'product.code'|trans }}: <strong>{{ content.product_code }}</strong></span>
                    {% endif %}

                    {% if content.short_description %}
                        <div class="product-short-description mt-20">
                            {{ content.short_description|nl2br }}
                        </div>
                    {% endif %}

                    {# Dokumenty do pobrania #}
                    {% if content.documents %}
                        <div class="product-documents mt-30">
                            <h3>{{ 'product.documents'|trans }}</h3>
                            <div class="documents-list">
                                {% for block in content.documents %}
                                    {% if block.type == 'document' %}
                                        <div class="document-item">
                                            <div class="document-icon">
                                                <i class="ti-file"></i>
                                            </div>
                                            <div class="document-info">
                                                <h4>
                                                    {{ block.title|default(block.file.title) }}
                                                    {% if block.document_type %}
                                                        <span class="badge">{{ ('document_type.' ~ block.document_type)|trans }}</span>
                                                    {% endif %}
                                                </h4>
                                                {% if block.description %}
                                                    <p class="text-muted">{{ block.description }}</p>
                                                {% endif %}
                                                <a href="{{ block.file.url }}" class="btn btn-sm btn-outline" download target="_blank">
                                                    <i class="ti-download"></i> {{ 'product.download'|trans }}
                                                </a>
                                            </div>
                                        </div>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}

                    {# Formularz kontaktowy dla produktu #}
                    <div class="product-actions mt-30">
                        <a href="{{ sulu_content_path('contact') }}?product={{ content.title }}" class="btn btn-lg btn-dark">
                            <i class="ti-email"></i> {{ 'product.contact_about'|trans }}
                        </a>
                    </div>
                </div>

            </div> {# end row #}

            {# Zakładki z opisem i specyfikacją #}
            <div class="row">
                <div class="col-md-12">
                    <div class="product-tabs mt-40">
                        <ul class="nav nav-tabs" role="tablist">
                            <li role="presentation" class="active">
                                <a href="#description" role="tab" data-toggle="tab">{{ 'product.description'|trans }}</a>
                            </li>
                            {% if content.specifications or content.technical_data %}
                                <li role="presentation">
                                    <a href="#specifications" role="tab" data-toggle="tab">{{ 'product.specifications'|trans }}</a>
                                </li>
                            {% endif %}
                        </ul>

                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane fade in active" id="description">
                                <div class="product-description">
                                    {{ content.description|raw }}
                                </div>
                            </div>

                            {% if content.specifications or content.technical_data %}
                                <div role="tabpanel" class="tab-pane fade" id="specifications">
                                    {% if content.specifications %}
                                        <div class="product-specifications">
                                            {{ content.specifications|raw }}
                                        </div>
                                    {% endif %}

                                    {% if content.technical_data %}
                                        <table class="table table-bordered technical-data-table">
                                            <tbody>
                                            {% for block in content.technical_data %}
                                                {% if block.type == 'data_row' %}
                                                    <tr>
                                                        <td><strong>{{ block.label }}</strong></td>
                                                        <td>{{ block.value }}</td>
                                                    </tr>
                                                {% endif %}
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    {% endif %}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            {# Powiązane produkty #}
            {% if content.related_products %}
                <div class="row mt-80">
                    <div class="col-md-12">
                        <h3 class="uppercase mb-40">{{ 'product.related_products'|trans }}</h3>
                    </div>
                </div>

                <div class="row">
                    {% for product in content.related_products %}
                        <div class="col-md-3 col-xs-6">
                            <div class="product-item">
                                <div class="product-img">
                                    <a href="{{ sulu_content_path(product.id) }}">
                                        {% if product.images[0] %}
                                            <img src="{{ product.images[0].thumbnails['400x400'] }}" alt="{{ product.title }}">
                                        {% else %}
                                            <img src="/build/images/placeholder.jpg" alt="{{ product.title }}">
                                        {% endif %}
                                    </a>
                                </div>
                                <div class="product-item-details">
                                    <h3 class="product-item-name">
                                        <a href="{{ sulu_content_path(product.id) }}">{{ product.title }}</a>
                                    </h3>
                                    {% if product.short_description %}
                                        <p class="text-muted">{{ product.short_description|slice(0, 80) }}...</p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}

        </div>
    </section>

    {# Custom CSS dla dokumentów #}
    <style>
        .documents-list {
            margin-top: 20px;
        }

        .document-item {
            display: flex;
            align-items: flex-start;
            padding: 15px;
            margin-bottom: 15px;
            border: 1px solid #eee;
            border-radius: 4px;
            transition: all 0.3s ease;
        }

        .document-item:hover {
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .document-icon {
            font-size: 32px;
            margin-right: 20px;
            color: #333;
        }

        .document-info {
            flex: 1;
        }

        .document-info h4 {
            margin: 0 0 5px 0;
            font-size: 16px;
        }

        .document-info .badge {
            background: #333;
            color: #fff;
            padding: 3px 8px;
            font-size: 11px;
            border-radius: 3px;
            margin-left: 10px;
        }

        .document-info p {
            margin: 5px 0;
            font-size: 13px;
        }

        .technical-data-table td {
            padding: 12px;
        }

        .technical-data-table td:first-child {
            width: 30%;
            background: #f9f9f9;
        }
    </style>

{% endblock %}
