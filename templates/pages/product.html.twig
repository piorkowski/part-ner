{% extends "base.html.twig" %}
{% block content %}

    <div class="page-title-wrap typo-white">
        <div class="page-title-wrap-inner section-bg-dark-1">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 text-center">
                        {% include 'partials/_breadcrumbs.html.twig' with {
                            parent: content.parent is defined and content.parent ? content.parent : null,
                            title: content.title
                        } %}
                        <h1 class="page-title">{{ content.title }}</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section class="section-wrap pt-80 pb-40 product-single">
        <div class="container relative">
            <div class="row">

                <div class="col-md-6 mb-50">
                    {% if content.images|length > 0 %}
                        <div class="product-gallery">
                            <div id="product-slider" class="flexslider">
                                <ul class="slides">
                                    {% for image in content.images %}
                                        <li data-thumb="{{ image.thumbnails['150x150'] }}">
                                            <a href="{{ image.url }}" class="lightbox-img">
                                                <img src="{{ image.thumbnails['800x600'] ?? image.thumbnails['400x400'] }}" alt="{{ image.title }}"/>
                                            </a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>
                            {% if content.images|length > 1 %}
                                <div id="product-carousel" class="flexslider">
                                    <ul class="slides">
                                        {% for image in content.images %}
                                            <li><img src="{{ image.thumbnails['150x150'] }}" alt="{{ image.title }}"/></li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            {% endif %}
                        </div>
                    {% endif %}
                </div>

                <div class="col-md-6 product-description-wrap mb-50">
                    {% if content.subtitle %}<p class="text-muted">{{ content.subtitle }}</p>{% endif %}
                    <h1 class="product-title">{{ content.title }}</h1>
                    {% if content.product_code %}<span class="product-code">{{ 'product.code'|trans }}: <strong>{{ content.product_code }}</strong></span>{% endif %}

                    {% if content.short_description %}
                        <div class="product-short-description mt-20">{{ content.short_description|nl2br }}</div>
                    {% endif %}

                    <div class="product-actions mt-30">
                        <a href="{{ sulu_content_path('contact') }}?product={{ content.title }}" class="btn btn-lg btn-dark">
                            <i class="ti-email"></i> {{ 'product.contact_about'|trans }}
                        </a>
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="product-tabs mt-40">
                        <ul class="nav nav-tabs" role="tablist">
                            <li role="presentation" class="active"><a href="#description" role="tab" data-toggle="tab">{{ 'product.description'|trans }}</a></li>
                            {% if content.specifications or content.technical_data %}
                                <li role="presentation"><a href="#specifications" role="tab" data-toggle="tab">{{ 'product.specifications'|trans }}</a></li>
                            {% endif %}
                            {% if content.documents %}
                                <li role="presentation"><a href="#documents" role="tab" data-toggle="tab">{{ 'product.documents'|trans }}</a></li>
                            {% endif %}
                        </ul>

                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane fade in active" id="description">
                                <div class="product-description">{{ content.description|raw }}</div>
                            </div>

                            {% if content.specifications or content.technical_data %}
                                <div role="tabpanel" class="tab-pane fade" id="specifications">
                                    {% if content.specifications %}
                                        <div class="product-specifications">{{ content.specifications|raw }}</div>
                                    {% endif %}
                                    {% if content.technical_data %}
                                        <table class="table table-bordered technical-data-table">
                                            <tbody>
                                            {% for block in content.technical_data %}
                                                {% if block.type == 'data_row' %}
                                                    <tr>
                                                        <td><strong>{{ block.label }}</strong></td>
                                                        <td>{{ block.value }}</td>
                                                    </tr>
                                                {% endif %}
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    {% endif %}
                                </div>
                            {% endif %}

                            {% if content.documents %}
                                <div role="tabpanel" class="tab-pane fade" id="documents">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-documents">
                                            <thead>
                                            <tr>
                                                <th style="width:15%">{{ 'product.document_type'|trans }}</th>
                                                <th style="width:30%">{{ 'product.document_title'|trans }}</th>
                                                <th>{{ 'product.document_description'|trans }}</th>
                                                <th style="width:12%">{{ 'product.download'|trans }}</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% for block in content.documents %}
                                                {% if block.type == 'document' %}
                                                    <tr>
                                                        <td>
                                                            {% if block.document_type is defined and block.type %}
                                                                {{ ('document_type.' ~ block.type)|trans }}
                                                            {% else %}
                                                                {{ 'product.document_other'|trans }}
                                                            {% endif %}
                                                        </td>
                                                        <td>{{ block.title|default(block.file.title[app.request.locale]|default(block.file.title|default('Brak tytu≈Çu'))) }}</td>
                                                        <td class="text-muted">{% if block.description %}{{ block.description }}{% endif %}</td>
                                                        <td>
                                                            <a href="{{ block.file.url }}" class="btn btn-xs btn-dark" download target="_blank">
                                                                <i class="ti-download"></i> {{ 'product.download'|trans }}
                                                            </a>
                                                        </td>
                                                    </tr>
                                                {% endif %}
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>

            {% if content.related_products %}
                <div class="row mt-80">
                    <div class="col-md-12"><h3 class="uppercase mb-40">{{ 'product.related_products'|trans }}</h3></div>
                </div>
                <div class="row">
                    {% for product in content.related_products %}
                        <div class="col-md-3 col-xs-6">
                            {% set p = product %}
                            <div class="product-item">
                                <div class="product-img">
                                    <a href="{{ sulu_content_path(p.id) }}">
                                        {% if p.content.images[0] is defined %}
                                            <img src="{{ p.content.images[0].thumbnails['400x400'] }}" alt="{{ p.content.title }}">
                                        {% else %}
                                            <img src="{{ asset('build/images/placeholder.jpg') }}" alt="{{ p.content.title }}">
                                        {% endif %}
                                    </a>
                                </div>
                                <div class="product-item-details">
                                    <h3 class="product-item-name"><a href="{{ sulu_content_path(p.id) }}">{{ p.content.title }}</a></h3>
                                    {% if p.content.short_description is defined and p.content.short_description %}
                                        <p class="text-muted">{{ p.content.short_description|slice(0, 80) }}...</p>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}

        </div>
    </section>

    <style>
        .table-documents th, .table-documents td { vertical-align: middle; }
        .table-documents td .btn { white-space: nowrap; }
        .technical-data-table td { padding: 12px; }
        .technical-data-table td:first-child { width: 30%; background: #f9f9f9; }
        #product-carousel .slides li { margin-right: 10px; }
        #product-carousel img { cursor: pointer; }
    </style>

    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('assets/lib/flexslider/jquery.flexslider.js') }}"></script>
        <script>
            $(function(){
                // Flexslider main + carousel sync (Titan-like)
                $('#product-carousel').flexslider({
                    animation: 'slide',
                    controlNav: false,
                    animationLoop: true,
                    slideshow: false,
                    itemWidth: 100,
                    itemMargin: 10,
                    asNavFor: '#product-slider'
                });
                $('#product-slider').flexslider({
                    animation: 'slide',
                    controlNav: false,
                    animationLoop: true,
                    slideshow: false,
                    sync: '#product-carousel'
                });
                // Magnific popup on main slide
                $('#product-slider').magnificPopup({
                    delegate: 'a.lightbox-img',
                    type: 'image',
                    gallery: { enabled: true }
                });
            });
        </script>
    {% endblock %}
{% endblock %}
