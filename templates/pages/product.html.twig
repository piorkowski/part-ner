{% extends "base.html.twig" %}
{% block content %}

    <section class="module">
        <div class="container">
            <div class="row">
                <div class="col-sm-6 mb-sm-40">
                    {% if content.images|length > 0 %}
                        <a class="gallery" href="{{ content.images[0].url }}">
                            <img src="{{ content.images[0].thumbnails['800x600'] ?? content.images[0].url }}" alt="{{ content.title }}"/>
                        </a>
                        {% if content.images|length > 1 %}
                            <ul class="product-gallery">
                                {% for image in content.images|slice(1) %}
                                    <li>
                                        <a class="gallery" href="{{ image.url }}">
                                            <img src="{{ image.thumbnails['200x200'] ?? image.url }}" alt="{{ content.title }}"/>
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    {% endif %}
                </div>

                <div class="col-sm-6">
                    <div class="row">
                        <div class="col-sm-12">
                            <h1 class="product-title font-alt">{{ content.title }}</h1>
                        </div>
                    </div>

                    {% if content.product_code %}
                        <div class="row mb-20">
                            <div class="col-sm-12">
                                <div class="product_meta">{{ 'product.code'|trans }}: <strong>{{ content.product_code }}</strong></div>
                            </div>
                        </div>
                    {% endif %}

                    {% if content.subtitle %}
                        <div class="row mb-20">
                            <div class="col-sm-12">
                                <p class="lead">{{ content.subtitle }}</p>
                            </div>
                        </div>
                    {% endif %}

                    {% if content.short_description %}
                        <div class="row mb-20">
                            <div class="col-sm-12">
                                <div class="description">
                                    <p>{{ content.short_description }}</p>
                                </div>
                            </div>
                        </div>
                    {% endif %}

                    <div class="row mb-20">
                        <div class="col-sm-12">
                            <a class="btn btn-lg btn-block btn-round btn-b" href="{{ sulu_content_path('contact') }}?product={{ content.title }}">
                                <span class="icon-mail"></span> {{ 'product.contact_about'|trans }}
                            </a>
                        </div>
                    </div>

                    {% if content.parent is defined and content.parent %}
                        <div class="row mb-20">
                            <div class="col-sm-12">
                                <div class="product_meta">
                                    {{ 'product.category'|trans }}: <a href="{{ sulu_content_path(content.parent.id) }}">{{ content.parent.title }}</a>
                                </div>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="row mt-70">
                <div class="col-sm-12">
                    <ul class="nav nav-tabs font-alt" role="tablist">
                        <li class="active">
                            <a href="#description" data-toggle="tab">
                                <span class="icon-tools-2"></span>{{ 'product.description'|trans }}
                            </a>
                        </li>
                        {% if content.specifications or content.technical_data %}
                            <li>
                                <a href="#data-sheet" data-toggle="tab">
                                    <span class="icon-tools-2"></span>{{ 'product.specifications'|trans }}
                                </a>
                            </li>
                        {% endif %}
                        {% if content.documents %}
                            <li>
                                <a href="#documents" data-toggle="tab">
                                    <span class="icon-document"></span>{{ 'product.documents'|trans }}
                                </a>
                            </li>
                        {% endif %}
                    </ul>

                    <div class="tab-content">
                        <div class="tab-pane active" id="description">
                            {% if content.description %}
                                {{ content.description|raw }}
                            {% endif %}
                        </div>

                        {% if content.specifications or content.technical_data %}
                            <div class="tab-pane" id="data-sheet">
                                {% if content.specifications %}
                                    <div class="mb-30">{{ content.specifications|raw }}</div>
                                {% endif %}

                                {% if content.technical_data %}
                                    <table class="table table-striped ds-table table-responsive">
                                        <tbody>
                                        <tr>
                                            <th>{{ 'product.parameter'|trans }}</th>
                                            <th>{{ 'product.value'|trans }}</th>
                                        </tr>
                                        {% for block in content.technical_data %}
                                            {% if block.type == 'data_row' %}
                                                <tr>
                                                    <td>{{ block.label }}</td>
                                                    <td>{{ block.value }}</td>
                                                </tr>
                                            {% endif %}
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                {% endif %}
                            </div>
                        {% endif %}

                        {% if content.documents %}
                            <div class="tab-pane" id="documents">
                                <table class="table table-striped ds-table table-responsive">
                                    <tbody>
                                    <tr>
                                        <th>{{ 'product.document_type'|trans }}</th>
                                        <th>{{ 'product.document_title'|trans }}</th>
                                        <th>{{ 'product.document_description'|trans }}</th>
                                        <th>{{ 'product.download'|trans }}</th>
                                    </tr>
                                    {% for block in content.documents %}
                                        {% if block.type == 'document' %}
                                            <tr>
                                                <td>
                                                    {% if block.document_type %}
                                                        {{ ('document_type.' ~ block.document_type)|trans }}
                                                    {% else %}
                                                        {{ 'product.document_other'|trans }}
                                                    {% endif %}
                                                </td>
                                                <td>{{ block.title|default(block.file.title|default('')) }}</td>
                                                <td>{{ block.description|default('') }}</td>
                                                <td>
                                                    <a href="{{ block.file.url }}" class="btn btn-xs btn-round btn-d" download target="_blank">
                                                        <i class="fa fa-download"></i> {{ 'product.download'|trans }}
                                                    </a>
                                                </td>
                                            </tr>
                                        {% endif %}
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </section>

    {% if content.related_products %}
        <hr class="divider-w">
        <section class="module-small">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                        <h2 class="module-title font-alt">{{ 'product.related_products'|trans }}</h2>
                    </div>
                </div>
                <div class="row multi-columns-row">
                    {% for product in content.related_products %}
                        <div class="col-sm-6 col-md-3 col-lg-3">
                            <div class="shop-item">
                                <div class="shop-item-image">
                                    {% if product.content.images is defined and product.content.images|length > 0 %}
                                        <img src="{{ product.content.images[0].thumbnails['400x400'] ?? product.content.images[0].url }}" alt="{{ product.content.title }}"/>
                                    {% else %}
                                        <img src="{{ asset('build/images/placeholder.jpg') }}" alt="{{ product.content.title }}"/>
                                    {% endif %}
                                    <div class="shop-item-detail">
                                        <a href="{{ sulu_content_path(product.id) }}" class="btn btn-round btn-b">
                                            {{ 'product.view_details'|trans }}
                                        </a>
                                    </div>
                                </div>
                                <h4 class="shop-item-title font-alt">
                                    <a href="{{ sulu_content_path(product.id) }}">{{ product.content.title }}</a>
                                </h4>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
    {% endif %}

    <style>
        .product-gallery{display:flex;flex-wrap:wrap;gap:10px;margin-top:20px;list-style:none;padding:0}
        .product-gallery li{flex:0 0 calc(33.333% - 7px)}
        .product-gallery a{display:block;border:2px solid #eee;transition:border-color .3s}
        .product-gallery a:hover{border-color:#333}
        .product-gallery img{width:100%;height:auto;display:block}
        .product_meta{margin-bottom:10px;color:#666}
        .product_meta a{color:#333;font-weight:600}
        .product_meta a:hover{color:#667eea}
        .ds-table th{background:#f9f9f9;font-weight:600}
        .ds-table td{vertical-align:middle}
    </style>

    {% block javascripts %}
        {{ parent() }}
        <script>
            $(function(){
                // Magnific Popup dla galerii
                $('.gallery').magnificPopup({
                    type: 'image',
                    gallery: {enabled: true}
                });
            });
        </script>
    {% endblock %}

{% endblock %}
