{% extends "base.html.twig" %}
{% block content %}

    {# Page Title #}
    <div class="page-title-wrap typo-white">
        <div class="page-title-wrap-inner section-bg-dark-1">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 text-center">
                        {% include 'partials/_breadcrumbs.html.twig' with {
                            parent: null,
                            title: content.title
                        } %}
                        <h1 class="page-title">{{ content.title }}</h1>
                        {% if content.subtitle %}<p class="page-subtitle lead">{{ content.subtitle }}</p>{% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    {# Main Content #}
    <section class="section-wrap pt-80 pb-40">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="about-content lead">
                        {{ content.content|raw }}
                    </div>
                </div>
            </div>
        </div>
    </section>

    {# Team Members #}
    {% if content.team_members %}
        <section class="section-wrap pb-80 pt-40">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 text-center mb-50"><h2 class="uppercase">{{ 'about.our_team'|trans }}</h2>
                    </div>
                </div>
                <div class="row">
                    {% for member in content.team_members %}
                        {% if member.type == 'member' %}
                            <div class="col-md-3 col-sm-6 mb-40">
                                <div class="team-member text-center">
                                    {% if member.photo %}
                                        <div class="team-member-img">
                                            <img src="{{ member.photo.thumbnails['400x400'] }}" alt="{{ member.name }}"
                                                 class="img-responsive">
                                            <div class="team-member-overlay">
                                                <div class="team-member-bio">{{ member.bio }}</div>
                                            </div>
                                        </div>
                                    {% endif %}
                                    <div class="team-member-details">
                                        <h4 class="team-member-name">{{ member.name }}</h4>
                                        {% if member.position %}<span
                                            class="team-member-position">{{ member.position }}</span>{% endif %}
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </section>
    {% endif %}

    {# Advantages #}
    {% if content.advantages %}
        <section class="section-wrap pb-80 pt-40 bg-light">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 text-center mb-50"><h2
                            class="uppercase">{{ 'about.our_advantages'|trans }}</h2></div>
                </div>
                <div class="row">
                    {% for advantage in content.advantages %}
                        {% if advantage.type == 'advantage' %}
                            <div class="col-md-6 mb-40">
                                <div class="advantage-item">
                                    {% if advantage.icon %}
                                        <div class="advantage-icon"><i class="{{ advantage.icon }}"></i>
                                        </div>{% endif %}
                                    <div class="advantage-content">
                                        <h3 class="h5 text-uppercase">{{ advantage.title }}</h3>
                                        <p class="text-muted">{{ advantage.description }}</p>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </section>
    {% endif %}

    {# Client Logos #}
    {% if content.client_logos %}
        <section class="section-wrap pb-80 pt-80">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 text-center mb-50"><h3 class="uppercase">{{ 'about.our_clients'|trans }}</h3>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="client-logos-carousel owl-carousel">
                            {% for logo in content.client_logos %}
                                <div class="client-logo"><img src="{{ logo.thumbnails['200x100'] }}"
                                                              alt="{{ logo.title }}"></div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    {% endif %}

{% endblock %}
